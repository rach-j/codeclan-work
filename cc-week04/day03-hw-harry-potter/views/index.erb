<h1> Student Registry </h1>

<% @students.each do |student| %>
<p> Name: <%= student.nice_name() %> </p>
<p> House: <%= student.house() %> </p>
<p> Age: <%= student.age() %> </p>
<p> <a href="/studentregistry/<%= student.id() %>"> Show details </a></p>
<p> <a href="/studentregistry/<%= student.id() %>/edit"> Edit entry </a></p>
<form method="post" action="/studentregistry/<%= student.id() %>/delete">
<input type="submit" value = "Delete this student"/>
</form>
<hr/>
<% end %>
